<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.gofish.app.ph" version="1.1">

	<name>Go Fish</name>
	<description>Go Fish</description>
	<author>Patrick Santos</author>
	<gap:platforms>
		<gap:platform name="android" />
	</gap:platforms>
	
	<icon src="img/go_fish_app2.png" />
	<icon src="img/go_fish_app2.png" gap:platform="android" gap:qualifier="ldpi" />
	<icon src="img/go_fish_app2.png" gap:platform="android" gap:qualifier="mdpi" />
	<icon src="img/go_fish_app2.png" gap:platform="android" gap:qualifier="hdpi" />
	<icon src="img/go_fish_app2.png" gap:platform="android" gap:qualifier="xhdpi" />
	
	<preference name="phonegap-version" value="cli-6.3.0" />
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="false" />
	<preference name="android-windowSoftInputMode" value="stateVisible" />
	<access origin="*" subdomains="true" />
	<access uri="*" subdomains="true" />
	
	<access origin="*" />
    <plugin name="cordova-plugin-whitelist" version="1" />
	<allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="http://www.facebook.com/*" />
    <allow-navigation href="http://185.121.173.201/*" />
    <allow-navigation href="http://connect.facebook.net/en_US/*" />

	<access origin="*"/> <!-- allow all pages, use for development -->
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	
	<gap:plugin name="org.apache.cordova.inappbrowser" />
	<gap:plugin name="org.apache.cordova.camera" />
	<gap:plugin name="org.apache.cordova.media" />
	<gap:plugin name="org.apache.cordova.media-capture" />
	<gap:plugin name="org.apache.cordova.geolocation" />
	<gap:plugin name="org.apache.cordova.file" />
	<gap:plugin name="org.apache.cordova.file-transfer" />
	<plugin name="org.apache.cordova.network-information" spec="0.2.12" source="pgb" />
	<!-- <gap:plugin name="de.appplant.cordova.plugin.local-notification" version="0.8.1" /> -->
	<!-- <gap:plugin name="com.telerik.plugins.nativepagetransitions" version="0.2.2" /> -->
	<plugin name="org.crosswalk.engine" spec="1.3.0" source="pgb" />
	
	<preference name="android-minSdkVersion" value="15" />
	
	<gap:config-file platform="android" parent="/manifest/application">
        android:windowSoftInputMode="stateVisible"
	</gap:config-file> 

	<gap:plugin name="com.phonegap.plugins.facebookconnect">
	    <param name="APP_ID" value="868229593309562" />
	    <param name="APP_NAME" value="Go-Fish" />
	</gap:plugin>
	
</widget>